<link rel="stylesheet" href="/css/sections/theme-toggle.css" />

<section>
	<div id="theme-toggle">
		<input type="checkbox" class="checkbox" id="checkbox" <%= userTheme ===
		'dark' ? 'checked' : '' %> />
		<label for="checkbox" class="checkbox-label">
			<img src="/img/dark_mode.webp" />
			<img src="/img/light_mode.webp" />
			<span class="ball"></span>
		</label>
	</div>
</section>
<script
	type="module"
	charset="utf8"
	src="/js/sections/theme-toggle.js"
></script>
